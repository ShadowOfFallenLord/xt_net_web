@{
    Layout = "~/Layouts/_MainLayout.cshtml";
    HelperResult inner_page = RenderBody();
    bool is_user = User.Identity.IsAuthenticated;
}

<div class="user_main_container">
    <div class="user_main_container_left">
        Hello,
        @if (is_user)
        {
            @User.Identity.Name
        }
        else
        {
            @:Guest
        }
        !
    </div>
    <div class="user_main_container_right">
        @if (is_user)
        {
            <a href="~/Pages/Users/LogOut.cshtml" class="link_button">
                LogOut
            </a>
        }
        else
        {
            <a href="~/Pages/Users/LogIn.cshtml" class="link_button">
                LogIn
            </a>
            <a href="~/Pages/Users/Register.cshtml" class="link_button">
                Register
            </a>
        }
    </div>
    <div class="container_block"></div>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {
        @inner_page
    }
    else
    {
        <div style="width: 100%; height: 100%; padding-top: 10%; text-align: center;">
            Sorry, you must be authenticated before look page!
        </div>
    }
</div>
