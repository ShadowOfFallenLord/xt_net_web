@using HW_Task_10_1;
@{
    Layout = null;

    bool name_fail = false;
    bool date_fail = false;
    bool add_fail = true;

    string name = Request["name_input"];
    string str_date = Request["dob_input"];

    if(IsPost)
    {        
        if(name == null || name.Length < 1)
        {
            name_fail = true;
        }
        
        DateTime date = DateTime.MinValue;
        if(str_date == null || str_date.Length < 1 || !DateTime.TryParse(str_date, out date))
        {
            date_fail = true;
        }

        if(!name_fail && !date_fail)
        {
            add_fail = !LogicKeeper.Logic.Add(name, date, DateTime.Now.Year - date.Year);
        }

        if(!add_fail)
        {
            Response.Redirect("~/Pages/LookUsers.cshtml");
        }
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        User don't added!
        <br />
        @if (name_fail)
        {
            @:"
            @name
            @:" is not correct name!
            <br />
        }

        @if (date_fail)
        {
            @:"
            @str_date
            @:" is not correct date!
            <br />
        }

        You can try again.
        <br />
        <br />
        <a href="~/Pages/LookUsers.cshtml">
            - Back
        </a>
    </div>
</body>
</html>
